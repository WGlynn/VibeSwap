# VibeSwap Oracle Environment Variables
# Copy to .env and fill in values

# ============ Required ============

# Oracle signer private key (without 0x prefix)
ORACLE_SIGNER_KEY=

# ============ RPC URLs ============

# Mainnet
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# L2s
ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
OP_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY

# Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# ============ Contract Addresses ============
# Set after deployment

TRUE_PRICE_ORACLE_ADDRESS=
STABLECOIN_REGISTRY_ADDRESS=
VIBE_AMM_ADDRESS=

# ============ Active Chain ============

ACTIVE_CHAIN=sepolia

# ============ On-Chain Data APIs ============

# Glassnode (optional - for leverage data)
GLASSNODE_API_KEY=

# CryptoQuant (optional - for leverage data)
CRYPTOQUANT_API_KEY=

# ============ Exchange APIs ============
# Optional - only needed for authenticated endpoints

BINANCE_API_KEY=
BINANCE_API_SECRET=

COINBASE_API_KEY=
COINBASE_API_SECRET=

# ============ Logging ============

LOG_LEVEL=INFO

# ============ Config File ============
# Optional - override config file location

# ORACLE_CONFIG_PATH=/path/to/oracle.yaml
