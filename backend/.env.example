# VibeSwap Backend Configuration
# Copy to .env and fill in production values

# Server
PORT=3001
NODE_ENV=production
CORS_ORIGINS=https://vibeswap.io,https://app.vibeswap.io

# RPC Endpoints (for on-chain data)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
OP_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Price Feed Cache TTL (seconds)
PRICE_CACHE_TTL=30

# WebSocket
WS_HEARTBEAT_INTERVAL=30000

# ============================================
# GitHub Contribution Relayer (Optional)
# ============================================
# If not configured, relayer starts in disabled mode

# RPC for relayer transactions (defaults to ETH_RPC_URL)
RELAYER_RPC_URL=

# Relayer wallet private key (funds gas for on-chain submissions)
RELAYER_PRIVATE_KEY=

# GitHubContributionTracker contract address
GITHUB_TRACKER_ADDRESS=

# Chain ID for EIP-712 domain (default: 1)
RELAYER_CHAIN_ID=1

# GitHub webhook secret (from GitHub App settings)
GITHUB_WEBHOOK_SECRET=

# Batch settings
RELAYER_BATCH_SIZE=10
RELAYER_BATCH_INTERVAL=60000

# Static GitHub username â†’ address mappings
# Format: GITHUB_MAP_USERNAME=0xAddress
# GITHUB_MAP_WGLYNN=0x...
# GITHUB_MAP_JARVIS=0x...
