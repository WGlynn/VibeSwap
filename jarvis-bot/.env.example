# Telegram
# Get from @BotFather on Telegram. If bot is deleted/recreated, update this token.
# All local data (contributions, conversations, users) survives token changes.
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Model (claude-opus-4-6 for deep analysis, claude-sonnet-4-5-20250929 for casual)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Repo path
VIBESWAP_REPO=/c/Users/Will/vibeswap

# Memory path
MEMORY_DIR=/c/Users/Will/.claude/projects/C--Users-Will/memory

# Authorized Telegram user IDs (comma-separated)
AUTHORIZED_USERS=

# Owner (Will) â€” co-admin with Jarvis, 50/50 governance
OWNER_USER_ID=

# Git remotes
GIT_REMOTE_ORIGIN=origin
GIT_REMOTE_STEALTH=stealth

# Auto-sync: pull from git + reload context (ms, default 10s)
AUTO_SYNC_INTERVAL=10000

# Auto-backup: commit data/ to git (ms, default 6 hours)
AUTO_BACKUP_INTERVAL=21600000
